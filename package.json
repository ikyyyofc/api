{
  "name": "plugin-rest-api",
  "version": "1.0.0",
  "description": "REST API dengan sistem plugin yang fleksibel dan interface web yang modern",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "mkdir -p public plugins && echo \"Folders created successfully\"",
    "plugin:create": "node scripts/create-plugin.js",
    "plugin:list": "node scripts/list-plugins.js",
    "clean": "rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "rest-api",
    "plugins",
    "web-interface",
    "api-manager",
    "modular",
    "extensible"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/plugin-rest-api.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/plugin-rest-api/issues"
  },
  "homepage": "https://github.com/yourusername/plugin-rest-api#readme",
  "config": {
    "port": 7680,
    "pluginDir": "./plugins",
    "staticDir": "./public"
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "plugins/"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "public/",
      "*.log"
    ],
    "delay": 1000,
    "env": {
      "NODE_ENV": "development",
      "DEBUG": "app:*"
    }
  }
}